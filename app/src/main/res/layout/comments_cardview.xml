<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E6E6E6"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="2dp"
    app:cardPreventCornerOverlap="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comments_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emile Smith Rowe "
                android:textColor="#292929"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/time_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 mins ago"
                android:textColor="#757575"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/comments_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#292929"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:text="An intense way to learn about the process and practice your designs skills â€” My 1st hackathon Hackathons have been on my mind since I heard it was a good way to gain experience as a junior UX designer. As my portfolio..."
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>