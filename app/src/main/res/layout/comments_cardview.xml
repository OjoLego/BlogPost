<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/comments_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="121"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/comments_body"
        android:layout_margin="2dp"
        app:layout_constraintStart_toStartOf="parent"
/>

    <TextView
        android:id="@+id/comments_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lego@gmail.com"
        android:textColor="@color/purple_700"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@id/comments_body"
        app:layout_constraintStart_toEndOf="@id/comments_id"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/comments_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="comments"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/teal_700"/>

</androidx.constraintlayout.widget.ConstraintLayout>